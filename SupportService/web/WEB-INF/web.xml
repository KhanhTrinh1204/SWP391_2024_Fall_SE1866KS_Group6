<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>HomeServerlet</servlet-name>
        <servlet-class>controller.admin.HomeServerlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListTourServerlet</servlet-name>
        <servlet-class>controller.admin.ListTourServerlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddTourServerlet</servlet-name>
        <servlet-class>controller.admin.AddTourServerlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteServerlet</servlet-name>
        <servlet-class>controller.admin.DeleteServerlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TourDetailServerlet</servlet-name>
        <servlet-class>controller.admin.TourDetailServerlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateTourServerlet</servlet-name>
        <servlet-class>controller.admin.UpdateTourServerlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddStaffServerlet</servlet-name>
        <servlet-class>controller.staff.AddStaffServerlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListStaffServerlet</servlet-name>
        <servlet-class>controller.staff.ListStaffServerlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteStaffServerlet</servlet-name>
        <servlet-class>controller.staff.DeleteStaffServerlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditStaffServerlet</servlet-name>
        <servlet-class>controller.staff.EditStaffServerlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListTourServerlet</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddTourServerlet</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteServerlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TourDetailServerlet</servlet-name>
        <url-pattern>/detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateTourServerlet</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddStaffServerlet</servlet-name>
        <url-pattern>/staff/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListStaffServerlet</servlet-name>
        <url-pattern>/staff/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteStaffServerlet</servlet-name>
        <url-pattern>/staff/delete</url-pattern>
